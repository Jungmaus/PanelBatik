@model PanelBatik.Models.OperationClass.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Mağaza Girişi | BuSepetten</title>
    <link href="~/DesignFiles/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/DesignFiles/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <link href="~/DesignFiles/LoginFile/login.css" rel="stylesheet" />
    <style type="text/css">
        .validateLabel {
            color: red;
        }
        .container-login .nav-tabs.nav-justified > li > a, .container-login .nav-tabs.nav-justified > li > a:hover, .container-login .nav-tabs.nav-justified > li > a:focus {
            background-color: orange;
        }
        .container-login button {
            background-color: orange;
            border-color: blue;
        }
        .container-login button:hover {
            background-color: blue;
        }
    </style>
</head>
<body>

    <div class="login-body">
        <article class="container-login center-block">
            <section>
                <ul id="top-bar" class="nav nav-tabs nav-justified">
                    <li class="active"><a href="#login-access">Giriş Yap</a></li>
                    <li><a href="@Url.Action("SifreYenile","Panel")">Şifremi Unuttum</a></li>
                </ul>
                <div class="tab-content tabs-login col-lg-12 col-md-12 col-sm-12 cols-xs-12">
                    <div id="login-access" class="tab-pane fade active in">
                        <h2>@*<i class="glyphicon glyphicon-log-in"></i>*@  <img src="~/DesignFiles/LoginFile/logo.png" style="width: 400px; height: 125px;" /> </h2>
                        @using (Html.BeginForm("Login", "Panel", FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()

                            @*<form method="post" accept-charset="utf-8" autocomplete="off" role="form" class="form-horizontal">*@
                            <div class="form-group ">
                                <label for="login" class="sr-only">Email</label>
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", id = "login_value", value = Model.Email, placeholder = "Email", tabindex = "1", type = "email", maxlength = "50", required = "required" })
                                @*<input type="text" class="form-control" name="login" id="login_value"
                                    placeholder="Email" tabindex="1" value="" />*@
                                @{
                                    if (Html.ValidationMessageFor(x => x.Email) != null)
                                    {
                                        <label class="validateLabel"><br />@Html.ValidationMessageFor(x => x.Email)</label>
                                    }
                                }
                            </div>
                            <div class="form-group ">
                                <label for="password" class="sr-only">Şifre</label>
                                @Html.PasswordFor(x => x.Sifre, new { @class = "form-control", id = "password", placeholder = "Şifre", value = Model.Sifre, tabindex = "2", maxlength = "30", required = "required" })
                                @*<input type="password" class="form-control" name="password" id="password"
                                    placeholder="Şifre" value="" tabindex="2" />*@
                                @{
                                    if (Html.ValidationMessageFor(x => x.Sifre) != null)
                                    {
                                        <label class="validateLabel"><br />@Html.ValidationMessageFor(x => x.Sifre)</label>
                                    }
                                }
                            </div>
                            <div class="checkbox">
                                <label class="control-label" for="remember_me">
                                    @Html.CheckBoxFor(x => x.Remember, new { id = "remember_me", tabindex = "3" }) Beni Hatırla
                                    @*<input type="checkbox" name="remember" id="remember_me" value="1" class="" tabindex="3" /> Beni Hatırla*@
                                </label>
                            </div>
                            <br />
                            <div class="form-group ">
                                <button type="submit" name="log-me-in" id="submit" tabindex="5" class="btn btn-lg btn-primary">Giriş Yap</button>
                            </div>

                            if (ViewBag.msgError != null)
                            {
                                <label class="validateLabel"><br />@ViewBag.msgError</label>
                            }

                            @*</form>*@
                        }
                    </div>
                </div>
            </section>
        </article>
    </div>

</body>
</html>
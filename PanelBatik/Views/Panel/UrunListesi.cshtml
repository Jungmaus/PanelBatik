
@{
    ViewBag.Title = "UrunListesi";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}


<h2>Ürünler</h2>

    <br />
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Tarihe Göre Ürün Listesi
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body" ng-controller="GetUrunListesiData">
                <div style="float: right;">
                    Bir şey yazın: <input type="text" maxlength="30" placeholder="Ne Arıyorsunuz ?" ng-model="SearchUrun"/>
                </div>
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                    <tr>
                        <th>Ürün Fotoğrafı</th>
                        <th>Ürün Adı</th>
                        <td><b>Ürün Açıklaması</b></td>
                        <th>Ürün Kategorisi</th>
                        <th>Ürün Fiyatı</th>
                        <th>Stok Durumu</th>
                        <th>Düzenle</th>
                    </tr>
                    </thead>
                    <tbody ng-repeat="item in Urunler | filter:SearchUrun">

                    <tr class="gradeU">
                        <td><img src="{{item.PicPath}}" style="width: 85px; height: 100px;"/></td>
                        <td>{{item.Ad}}</td>
                        <td>{{item.Aciklama}}</td>
                        <td>{{item.KategoriAd}}</td>
                        <td>{{item.Fiyat}} TL</td>
                        <td>{{item.Stok}}</td>
                        <td><a href="@Url.Action("UrunEdit", "Panel")/{{item.Id}}"><button class="btn btn-info" type="button" id="btnEdit">Edit <span class="glyphicon glyphicon-search"></span></button></a></td>
                    </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>

@{
    ViewBag.Title = "KategoriListesi";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<h2>Kategori Listesi</h2>
<br/>

<div ng-controller="KategoriListesiController">
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            Kategori Listesi
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div style="float: right;">
                Bir şey yazın: <input type="text" maxlength="30" placeholder="Ne Arıyorsunuz ?" ng-model="SearchKategori"/>
            </div>
            <table style="width: 100%;" class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Kategori Adı</th>
                    <th>İşlemler</th>
                </tr>
                </thead>
                <tbody ng-repeat="item in Kategoriler | filter:SearchKategori">

                <tr class="gradeU">
                    <td>{{item.Id}}</td>
                    <td>{{item.Ad}}</td>
                    <td><a href="@Url.Action("KategoriyeAitUrunler","Panel")/{{item.Id}}" ng-style="btnStyle"><button class="btn btn-info" type="button">Ürünler <span class="glyphicon glyphicon-list"></span></button></a>
                    <button class="btn btn-danger" ng-style="btnStyle" type="button" ng-click="KategoriSil(item.Id)">Sil <span class="glyphicon glyphicon-search"></span></button></td>
                </tr>

                </tbody>
            </table>
        </div>
    </div>
</div>
</div>